<h1 class="text-center"><%= pluralize(@posts.count, "Result")%></h1>

<div class="container">
    <table class="table table-bordered table-hover table-striped mt-5">
        <thead class="thead-dark">
            <tr class="table-dark">
                <th><%= sort_link(@query, :title, "Title", default_order: :asc)%></th>
                <th><%= sort_link(@query, :content, "Blog Content")%></th>
                <th><%= sort_link(@query, :user_name, "User")%></th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td><%= link_to post.title, post %></td>
                    <td><%= post.content.truncate_words(25) %></td>
                    <td><%= link_to post.user.name, post.user %></td>
                </tr>
            <% end %>    
        </tbody>
    </table>
</div>